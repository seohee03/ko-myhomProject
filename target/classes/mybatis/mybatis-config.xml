<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<!-- 여러가지 기본 옵션을 지정합니다. -->
	<settings>
		<!-- 필드 속성이 READ_COUNT 처럼 언더 스코어가 있을 때 VO 의 readCount 처럼 카멜 케이스로 변환 되게 합니다. -->
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>
	
	<!-- 별칭 -->
	<typeAliases>
		<typeAlias alias="member" type="com.myhome.www.member.dto.Member"/>
	
		<typeAlias alias="item" type="com.myhome.www.item.dto.Item"/>
		<typeAlias alias="option1" type="com.myhome.www.item.dto.Option1"/>
		<typeAlias alias="option2" type="com.myhome.www.item.dto.Option2"/>
		<typeAlias alias="itemImg" type="com.myhome.www.item.dto.ItemImg"/>
		<typeAlias alias="categorie" type="com.myhome.www.item.dto.Categorie"/>
		<typeAlias alias="itemCommand" type="com.myhome.www.item.service.ItemCommand"/>
		
		<typeAlias alias="cart" type="com.myhome.www.store.dto.Cart"/>
		
		<typeAlias type="com.myhome.www.article.dto.Article" alias="articleDTO"/>
	</typeAliases>
</configuration>
